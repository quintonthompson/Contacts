<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns:fx="http://javafx.com/fxml" fx:controller="sample.DialogController">
    <headerText>
        Please enter new contact information.
    </headerText>
    <content>
        <GridPane>
            <Label text="First name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="dialogTextFieldFName" GridPane.rowIndex = "1" GridPane.columnIndex="0"/>
            <Label text="Last name" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="dialogTextFieldLName" GridPane.rowIndex = "3" GridPane.columnIndex="0"/>
            <Label text="Phone number" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="dialogTextFieldPNumber" GridPane.rowIndex = "5" GridPane.columnIndex="0"/>
            <Label text="Notes" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <TextField fx:id="dialogTextFieldNotes" GridPane.rowIndex = "7" GridPane.columnIndex="0"/>

        </GridPane>
    </content>


</DialogPane>
